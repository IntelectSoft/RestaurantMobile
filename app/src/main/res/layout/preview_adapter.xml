<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="3dp"
    android:background="@drawable/item_background_selector_preview">

    <ImageView
        android:id="@+id/image_pre_asl"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="4dp"
        android:src="@mipmap/ic_launcher"
        android:textAppearance="?android:attr/textAppearanceListItemSmall" />

    <TextView
        android:id="@+id/text_view_asl_prew"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/text_count_prew"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@color/counts"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/text_price_prew"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:gravity="end"
        android:paddingEnd="3dp"
        android:paddingRight="3dp"
        android:textAlignment="textEnd"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@android:color/holo_red_light"
        android:textSize="22sp" />


</LinearLayout>
